<Window x:Class="SQLClient.ConnectDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ConnectDialog" Height="430" Width="500" Background="DarkGray" Loaded="HandleLoad">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="0" Grid.Row="0">Saved Connections:</Label>
        <ListBox Name="_savedConnectionsListBox" Grid.Column="1" Grid.Row="0" SelectionChanged="HandleConnectionSelected" ItemsSource="{Binding}" />
        <Label Grid.Column="0" Grid.Row="1">Name:</Label>
        <TextBox Grid.Column="1" Grid.Row="1" Name="_nameTextBox" />
        <Label Grid.Column="0" Grid.Row="2">Type:</Label>
        <ComboBox Name="_serverTypeComboBox" Grid.Column="1" Grid.Row="2">
            <ComboBoxItem Selector.IsSelected="True">Oracle</ComboBoxItem>
            <ComboBoxItem>SQL Server</ComboBoxItem>
        </ComboBox>
        <Label Grid.Row="3" Grid.RowSpan="2">Server:</Label>
        <TextBox Grid.Column="1" Grid.Row="3" Name="_serverTextBox" />
        <Label Grid.Row="4">Initial Catalog:</Label>
        <TextBox Grid.Column="1" Grid.Row="4" Name="_initCatalogTextBox" />
        <Label Grid.Row="5">Username:</Label>
        <TextBox Grid.Column="1" Grid.Row="5" Name="_usernameTextBox" />
        <Label Grid.Row="6">Password:</Label>
        <TextBox Grid.Column="1" Grid.Row="6" Name="_passwordTextBox" />

        <WrapPanel Grid.Row="7" Grid.Column="1" Margin="0 5 0 0" HorizontalAlignment="Right">
            <Button Name="_saveButton" Width="70" Margin="5 0 0 0" Click="HandleSave">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/save.png" />
                    <TextBlock Margin="3 0 0 0">Save</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="_deleteButton" Width="70" Margin="5 0 15 0" Click="HandleDelete">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/delete.png" />
                    <TextBlock Margin="3 0 0 0">Delete</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="_okButton"  Width="50" Margin="5 0 0 0" Click="HandleOK" IsDefault="True">OK</Button>
            <Button Name="_cancelButton" Width="50" Margin="5 0 0 0" Click="HandleCancel" IsCancel="True">Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
